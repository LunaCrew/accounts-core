{
  "openapi": "3.0.0",
  "info": {
    "title": "Accounts Core API",
    "description": "API documentation for the Accounts Core service",
    "version": "0.1.0"
  },
  "paths": {
    "/api/user": {
      "post": {
        "summary": "Create a new user",
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "503": {
            "description": "Service unavailable"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "settings": {
                    "type": "object",
                    "properties": {
                      "theme": {
                        "type": "string"
                      },
                      "animations": {
                        "type": "boolean"
                      },
                      "notificationType": {
                        "type": "string"
                      },
                      "speechType": {
                        "type": "string"
                      },
                      "publicKey": {
                        "type": "string"
                      },
                      "backupAccount": {
                        "type": "string"
                      },
                      "buildVersion": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get user details",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "settings": {
                      "type": "object",
                      "properties": {
                        "theme": {
                          "type": "string"
                        },
                        "animations": {
                          "type": "boolean"
                        },
                        "notificationType": {
                          "type": "string"
                        },
                        "speechType": {
                          "type": "string"
                        },
                        "publicKey": {
                          "type": "string"
                        },
                        "backupAccount": {
                          "type": "string"
                        },
                        "buildVersion": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "503": {
            "description": "Service unavailable"
          }
        }
      }
    },
    "/api/user/{id}": {
      "delete": {
        "summary": "Delete a user",
        "responses": {
          "204": {
            "description": "No content"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "503": {
            "description": "Service unavailable"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody":{
          "content": {
            "application_json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                }
              }
            
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "503": {
            "description": "Service unavailable"
          }
        }
      }
    }
  }
}